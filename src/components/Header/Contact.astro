---
import { Icon } from 'astro-icon';

const email = import.meta.env.EMAIL;
---

<div
  id="header-contact"
  class="hidden w-full h-[90px] px-7 py-4 lg:flex bg-gray-800 lg:justify-end lg:items-center lg:gap-4 text-xs z-10"
>
  <div
    class="scrollreveal flex justify-center items-center gap-1 opacity-0"
    style="--i:.2s"
    data-to="bottom"
  >
    <Icon name="call" class="stroke-gray-50" width="50" />
    <div class="flex flex-col">
      <p class="block text-gray-50 font-bold">ATENCIÓN AL CLIENTE:</p>
      <div class="flex">
        <p class="before:content-['+51_997286184'] after:block text-gray-300">
          <span>&nbsp;/&nbsp;</span>
        </p>
        <p class="after:content-['+51_949777366'] after:block text-gray-300">
        </p>
      </div>
    </div>
  </div>
  <div
    class="scrollreveal flex justify-center items-center gap-1 opacity-0"
    style="--i:.4s"
    data-to="bottom"
  >
    <Icon name="mail" class="stroke-gray-50" width="50" />

    <div class="flex flex-col">
      <p class="block text-gray-50 font-bold">CORREO:</p>
      <p class={"after:content-['" + email + "'] after:block text-gray-300"}>
      </p>
    </div>
  </div>
  <div
    class="scrollreveal flex justify-center items-center gap-1 opacity-0"
    style="--i:.4s"
    data-to="bottom"
  >
    <Icon name="marker" class="stroke-gray-50" width="50" />
    <div>
      <p class="flex justify-center items-start text-gray-50 font-bold">
        Villa Solidaridad 3ra Etapa - SJM <br />
      </p>
      <span class="block text-gray-300">Lima - Perú</span>
    </div>
  </div>
</div>
