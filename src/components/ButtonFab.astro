---
import { Icon } from 'astro-icon';

const phone = import.meta.env.PHONE_ONE;
---

<a
  type="button"
  class="rounded-full bg-emerald-800 fixed bottom-2 right-2 flex p-2 shadow-lg animate-bounce z-40 cursor-pointer"
  target="_blank"
  href={`https://wa.me/${phone}`}
>
  <Icon name="whatsapp" width="50" class="stroke-gray-50" />
</a>
