---
const Items = [
  {
    num: '01',
    subtitle: 'LLAMANOS',
    description: 'Comunicate con nosotros y agenda la instalación.',
  },
  {
    num: '02',
    subtitle: 'PAGO',
    description: 'Realizar el pago por instalación.',
  },
  {
    num: '03',
    subtitle: 'LISTO',
    description: 'Tendras tus unidades rastreadas.',
  },
];
---

<section
  id="process"
  class="px-2 py-16 w-full h-full flex flex-col justify-center items-center gap-8 bg-gray-800 overflow-hidden bg-[url('/img/lines.svg')] bg-cover bg-center"
>
  <h2
    class="scrollreveal w-full text-3xl md:text-4xl font-bold text-gray-50 text-center opacity-0"
    style="--i:.7s"
    data-to="left"
  >
    NUESTRO MUY SIMPLE PROCESO PARA ADQUIRIR NUESTRO SERVICIO
  </h2>
  <div class="w-full h-full flex flex-wrap justify-center items-center gap-8">
    {
      Items.map(({ num, subtitle, description }, index) => (
        <article
          class="scrollreveal w-full max-w-sm h-64 flex flex-row border-[3px] border-emerald-50 rounded-tl-[8rem] rounded-br-[8rem] overflow-hidden shadow-2xl opacity-0"
          style={`--i:${(index + 1) * 0.3}s`}
          data-to="top">
          <header class="flex-[0.6] flex justify-center items-center bg-emerald-800">
            <h3 class="text-8xl font-bold text-gray-50">{num}</h3>
          </header>
          <div class="relative p-4 flex-1 flex flex-col justify-center items-center gap-4 text-center bg-gray-50">
            <h4 class="text-2xl font-bold text-emerald-900">{subtitle}</h4>
            <p class="text-lg text-gray-800">{description}</p>
            <img
              src="img/glow.svg"
              alt="glow"
              srcset="img/glow.svg"
              class="absolute -top-20 -right-24 h-full rotate-45 "
            />
          </div>
        </article>
      ))
    }
  </div>
</section>
